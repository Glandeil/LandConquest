<Window xmlns:Wpf="clr-namespace:Microsoft.Web.WebView2.Wpf;assembly=Microsoft.Web.WebView2.Wpf"
        xmlns:Core="clr-namespace:Microsoft.Web.WebView2.Core;assembly=Microsoft.Web.WebView2.Core"  
        x:Class="LandConquest.Forms.DiscordChatWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:wpf="clr-namespace:CefSharp.Wpf;assembly=CefSharp.Wpf"
        mc:Ignorable="d"
        WindowStyle="None" ResizeMode="NoResize" AllowsTransparency="True" ShowInTaskbar="False" Topmost="True"
        Height="600" Width="510" Loaded="Window_Loaded" Foreground="{x:Null}" >

    <Window.Background>
        <SolidColorBrush Opacity="0.05" Color="White"/>
    </Window.Background>
    <Grid >
        <Border BorderThickness="0" Panel.ZIndex="-1">
            <Wpf:WebView2 x:Name="DiscordBrowser" DefaultBackgroundColor="Transparent" Initialized="DiscordBrowser_Initialized" IsEnabled="False"/>
        </Border>
    </Grid>

</Window>
